{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler", // node
    "skipLibCheck": true,

    /* Bundler mode */
    "allowImportingTsExtensions": true, // false
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // false
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping and includes */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/assets/*": ["assets/*"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"]
    },

    /* Include type definitions */
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],

    "useDefineForClassFields": true,

  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}